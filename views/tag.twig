{% extends "base.html" %}

{% block content %}
  <h1>tag</h1>
  <div class="row">

    <div class="span4">
      <img src="{{status.src}}" alt="" />
    </div>

    <div class="span8">
      <form method="post" action="/viztag/tag">
        <fieldset>
          <legend>add tags</legend>
          <input type="hidden" name="vs_id" value="{{status.id}}" />
          {% for ns, nstags in tags %}
          <select class="tag" name="tag-{{ns}}">
            <option value="-1">{{ns}} (pick one)</option>
            {% for tag in nstags %}
            <option value="{{tag.id}}">{{tag.tag}}</option>
            {% endfor %}
          </select>
          {% endfor %}
          <input class="input-xxlarge" type="text" id="comment" placeholder="comment (optional)" autocomplete="off" name="comment">
          <!--<input class="input-xxlarge" type="text" id="viztag-tagging" placeholder="filter..." autocomplete="off" name="tags">-->
          <br><button type="submit">Add tags</button>
        </fieldset>
      </form>
    </div>

  </div>
{% endblock %}
